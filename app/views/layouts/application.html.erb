<!DOCTYPE html>
<html>
  <head>
    <title>ECommerceG03</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
         
  </head>

  <body>
    <ul>
  <% if user_signed_in? %>
   <li>
  <%= link_to "home", items_path %>
    </li>
   <li>
  <%= link_to "profil", current_user %>
    </li>
    <li>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    </li>

    <li>
      Voici ton email : <%= current_user.email %>
    </li>

    <li>
      <%= link_to "Secret page", static_pages_secret_path %>
    </li>

    <li>
      <%= link_to "Edit email / password", edit_user_registration_path %>
    </li>

  <% else %>
    <li>    
      <%= link_to "Sign in", new_user_session_path %>
    </li>

    <li>
      <%= link_to "Sign up", new_user_registration_path %>
    </li>

  <% end %>
</ul>
      <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
  

    
    <%= yield %>


  </body>
</html>
